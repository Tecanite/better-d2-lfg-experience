{
    "manifest_version": 3,
    "name": "better d2 lfg experience",
    "description": "adds useful features to destiny 2 raid.report and bungie fireteam search",
    "version": "0.2",
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab",
        "tabs",
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "https://www.bungie.net/Platform/*"
    ],
    "icons": {
        "16": "images/rr16.png",
        "48": "images/rr48.png",
        "128": "images/rr128.png"
    },
    "options_page": "html/options.html",
    "content_scripts": [
        {
            "matches": [
                "*://raid.report/*/*"
            ],
            "css": [
                "css/sidebar.css",
                "css/styles.css"
            ],
            "js": [
                "js/jquery-3.7.0.min.js",
                "js/rr-layout.js",
                "js/rr-sidebar.js",
                "js/rr-script.js"
            ]
        },
        {
            "matches": [
                "*://www.bungie.net/7/*/Fireteams/Search?*"
            ],
            "js": [
                "js/fireteam-quickactions.js",
                "js/fireteam-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/rr-sidebar.js",
                "js/rr-layout.js",
                "css/sidebar.css"
            ],
            "matches": [
                "*://raid.report/*"
            ]
        },
        {
            "resources": [
                "js/fireteam-quickactions.js",
                "css/fireteamSearch.css",
                "css/fireteam-player-reports.css",
                "css/fireteam-search-grid.css"
            ],
            "matches": [
                "*://www.bungie.net/*"
            ]
        }
    ]
}