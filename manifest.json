{
    "manifest_version": 3,
    "name": "Better raid.report",
    "description": "Adds useful features to Destiny 2 raid.report",
    "version": "0.1",
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "https://www.bungie.net/Platform/*"
    ],
    "icons": {
        "16": "/images/rr16.png",
        "48": "/images/rr48.png",
        "128": "/images/rr128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://raid.report/*/*"
            ],
            "css": [
                "css/styles.css"
            ],
            "js": [
                "js/jquery-3.7.0.min.js",
                "js/sidebar.js",
                "js/container.js",
                "js/content_script.js"
            ]
        },
        {
            "matches": [
                "*://www.bungie.net/7/en/Fireteams/Search?*"
            ],
            "css": [
                "css/fireteamSearch.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/sidebar.js",
                "js/container.js"
            ],
            "matches": [
                "*://raid.report/*"
            ]
        }
    ]
}